{
  "manifest_version": 2,
  "name": "Nepali Lyrics Helper",
  "version": "1.0",
  "description": "Displays Nepali song lyrics on YouTube",
  
  "permissions": [
    "storage",
    "https://www.youtube.com/*",
    "https://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html"
  }
}