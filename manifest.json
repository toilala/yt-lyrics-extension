{
  "manifest_version": 3,
  "name": "YouTube Lyrics â€” Gemini (Popup)",
  "version": "1.0",
  "description": "Fetch lyrics for YouTube videos using Gemini API (popup-only). Replace API key in background.js before loading.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_dummy.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
